using CP;

float t1;
execute {
	var before = new Date();
	t1 = before.getTime();
	cp.param.TimeLimit = 180;
}


int N=...;
tuple slot {
	int d;
	int p; 
};
range players = 1..N;
range days = 1..N-1;
range periods = 1..N div 2;
{slot} planning = {<d,p> | d in days, p in periods};

dvar int player1[planning] in players;
dvar int player2[planning] in players;

subject to {
	//  -------- player1 vs player2 = player2 vs player1
	forall(s in planning)
		player1[s] < player2[s];
	//  -------- chaque joueur joue une fois par jour
	forall(day in days, player in players)
	  count(all (s in planning : s.d == day) player1[s], player) + count(all (s in planning : s.d == day) player2[s], player) == 1;
}